<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Fazendas cadastradas
            </div>
            <div class="panel-body">                
                @if (ViewBag.Fazendas != null && ViewBag.Fazendas.Count > 0)
                {
                    <div class="table-responsive dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-fazendas">
                            <thead>
                                <tr>
                                    <th>Nome</th>
                                    <th>Abreviatura</th>
                                    <th>Quantidade de Animais</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < ViewBag.Fazendas.Count; i++)
                                {

                                    <tr class="@(i % 2 == 0 ? "odd" : "even") gradeA">
                                        <td>@ViewBag.Fazendas[i].Nome</td>
                                        <td>@ViewBag.Fazendas[i].Abreviatura</td>
                                        <td>@SysPec.Data.Models.Animais.ListCountAnimaisByFazenda(ViewBag.Fazendas[i].Id)</td>
                                        <td class="text-right">
                                            <a href="@Url.Action("Index", new { FazendaId = ViewBag.Fazendas[i].Id })" class="btn btn-primary btn-circle">
                                                <i class="fa fa-edit"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <script>
                        window.onload = function () {
                            $('#dataTables-fazendas').DataTable();
                        };
                    </script>
                }
                else
                {
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="alert alert-warning" role="alert">
                                <span class="glyphicon glyphicon-warning-sign" aria-hidden="true"></span>
                                <span class="sr-only">Atenção:</span>
                                Não existe fazendas cadastradas.
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>