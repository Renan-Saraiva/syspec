<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Lotes cadastrados
            </div>
            <div class="panel-body">
                @if (ViewBag.Lotes != null && ViewBag.Lotes.Count > 0)
                {
                    <div class="table-responsive dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-lotes">
                            <thead>
                                <tr>
                                    <th>Nome</th>
                                    <th>Quantidade de Animais</th>
                                    <th>Data de criação</th>
                                    <th>Anotações</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < ViewBag.Lotes.Count; i++)
                                {

                                    <tr class="@(i % 2 == 0 ? "odd" : "even") gradeA">
                                        <td>@ViewBag.Lotes[i].Nome</td>
                                        <td>@SysPec.Data.Models.Lote.GetQtnAnimais(ViewBag.Lotes[i].Id)</td>
                                        <td>@ViewBag.Lotes[i].CriadoEm.ToString("dd/MM/yyyy")</td>
                                        <td>@SysPec.App.Helpers.Helper.GetSubString(ViewBag.Lotes[i].Anotacoes, 80)</td>
                                        <td class="text-right">
                                            <a href="@Url.Action("ListarAnimaisDoLote", new { LoteId = ViewBag.Lotes[i].Id })" class="btn btn-primary btn-circle">
                                                <i class="fa fa-eye"></i>
                                            </a>
                                            <a href="@Url.Action("Index", new { LoteId = ViewBag.Lotes[i].Id })" class="btn btn-primary btn-circle">
                                                <i class="fa fa-edit"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <script>
                        jQuery(function () {
                            $('#dataTables-lotes').DataTable();
                        });
                    </script>
                }
                else
                {
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="alert alert-warning" role="alert">
                                <span class="glyphicon glyphicon-warning-sign" aria-hidden="true"></span>
                                <span class="sr-only">Atenção:</span>
                                Não existe lotes cadastrados.
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
