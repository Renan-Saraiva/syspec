@if (@ViewBag.QtdAnimaisPermitida > 0)
{
    <div class="form-group">
        <label for="QtdDeAnimais">Quantidade de animais</label>
        <input class="form-control" data-val="true" data-val-number="The field Quantidade de animais must be a number." data-val-range="A Quantidade de Animais deve estar entre 1 e @ViewBag.QtdAnimaisPermitida animais. (Este lote já tem @ViewBag.QtdAnimais animais)" data-val-range-max="@ViewBag.QtdAnimaisPermitida" data-val-range-min="1" data-val-required="O campo Quantidade de animais é obrigatório." id="QtdDeAnimais" name="QtdDeAnimais" type="number" value="">
        <span class="field-validation-valid text-danger" data-valmsg-for="QtdDeAnimais" data-valmsg-replace="true"></span>
    </div>
    <div class="form-group">
        <label for="Animal_NascidoEm">Nascidos Em (Media das datas de nascimento)</label>
        <input class="form-control" data-val="true" data-val-date="The field Nascido Em must be a date." data-val-required="O campo Nascido Em é obrigatório." id="Animal_NascidoEm" name="Animal.NascidoEm" type="date" value="">
        <span class="field-validation-valid text-danger" data-valmsg-for="Animal.NascidoEm" data-valmsg-replace="true"></span>
    </div>
    <div class="form-group">
        <label for="Animal_Peso">Peso dos animais. (Media dos pesos)</label>
        <div class="input-group">
            <div class="input-group-addon">KG</div>
            <input class="form-control" data-val="true" data-val-number="The field Peso must be a number." data-val-range="O Peso do animal deve estar entre 1 e 3000 kilos" data-val-range-max="3000" data-val-range-min="1" data-val-required="O campo Peso é obrigatório." id="Animal_Peso" name="Animal.Peso" type="number" value="">
            <div class="input-group-addon">.00</div>
        </div>
        <span class="field-validation-valid text-danger" data-valmsg-for="Animal.Peso" data-valmsg-replace="true"></span>
    </div>
    <div class="form-group">
        <label for="Animal_Sexo">Sexo dos animais</label>
        @Html.DropDownList("Animal.Sexo", new SelectList(SysPec.Data.Models.Sexos.List(), "Id", "Name"), "Selecione...", new { @class = "form-control", data_val="true" , data_val_number = "The field Sexo must be a number.", data_val_required = "O campo Sexo é obrigatório." })
        <span class="field-validation-valid text-danger" data-valmsg-for="Animal.Sexo" data-valmsg-replace="true"></span>
    </div>
    <div class="form-group">
        <label for="Animal_Raca">Raça dos animais</label>
        @Html.DropDownList("Animal.Raca", new SelectList(SysPec.Data.Models.Racas.List(), "Id", "Name"), "Selecione...", new { @class = "form-control" , data_val="true" , data_val_number="The field Raça must be a number." , data_val_required="O campo Raça é obrigatório."})
        <span class="field-validation-valid text-danger" data-valmsg-for="Animal.Raca" data-valmsg-replace="true"></span>
    </div>
}
else 
{
    <div class="row">
        <div class="col-lg-12">
            <div class="alert alert-danger" role="alert">
                <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                <span class="sr-only">Atenção:</span>
                A capacidade máxima de animais para este lote já foi atingida.
            </div>
        </div>
    </div>
    <script>
        jQuery(function () {
            $('#btnAddAnimaisToLote').attr('disabled', 'disabled');
        });
    </script>
}