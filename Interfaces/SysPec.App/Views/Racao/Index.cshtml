@model SysPec.Data.Models.Racao
@{
    ViewBag.Title = "Rações";
    Layout = "~/Views/Shared/_Master.cshtml";
}
@using (Html.BeginForm("Index", "Racao", FormMethod.Post, new { role = "form" }))
{
    <p class="text-success text-center">@ViewBag.StatusMessage</p>
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.Criador)
    <div class="form-group">
        @Html.LabelFor(m => m.Nome)
        @Html.TextBoxFor(m => m.Nome, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Nome, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Anotacoes)
        @Html.TextAreaFor(m => m.Anotacoes, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Anotacoes, "", new { @class = "text-danger" })
    </div>
    <div class="row">
        <div class="col-sm-3">
            @if (ViewBag.RacaoExiste)
            {
                @Html.ActionLink("Nova Ração", "Index", null, new { @class = "btn btn-lg btn-primary btn-block" })
            }
        </div>
        <div class="col-sm-6">
        </div>
        <div class="col-sm-3">
            <input type="submit" value="Salvar" class="btn btn-lg btn-success btn-block" />
        </div>
    </div>
}
<br />
@Html.Action("Listar")
